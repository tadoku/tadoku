load("@rules_oci//oci:defs.bzl", "oci_image", "oci_load")
load("@rules_pkg//:pkg.bzl", "pkg_tar")

pkg_tar(
    name = "tar",
    srcs = glob(["**/*.sql"]),
    mode = "0644",
    package_dir = "/migrations",
)

oci_image(
    name = "image",
    base = "@go_migrate_linux_amd64",
    tars = [":tar"],
)

oci_load(
    name = "load",
    image = ":image",
    repo_tags = ["bazel/services/authz-api/storage/postgres/migrations:latest"],
)
